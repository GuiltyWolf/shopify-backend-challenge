<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items-table">
  <div>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Price</td>
      <td>Quantity</td>
      <td>Rating</td>
      <td>Size</td>
      <td>Link</td>
    </tr>
  </div>

  <% @items.each do |item| %>
    <div>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.rating %></td>
        <td><%= item.size %></td>
        <td><%= link_to "Show item", item %></td>
      </tr>
    </div>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
<%= link_to "Export CSV", items_path(:format => "csv") %>
